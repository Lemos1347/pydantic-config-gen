# Example environment variables for testing the configuration system
# Copy this to .env and set actual values

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mydb
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Redis configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Authentication configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=86400

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# HTTP configuration
API_HOST=0.0.0.0
API_PORT=8000

# Messaging configuration
QUEUE_URL=amqp://guest:guest@localhost:5672/
QUEUE_TIMEOUT=60

# Telemetry configuration (optional and conditional)
USE_OTL=false
# OTL_ENDPOINT=http://jaeger:14268/api/traces  # Required only when USE_OTL=true
# OTL_SERVICE_NAME=my-service                  # Optional
# TRACE_SAMPLE_RATE=0.1                       # Optional

# Feature flags with conditional requirements
ENABLE_RATE_LIMITING=false
# RATE_LIMIT_PER_MINUTE=100  # Required only when ENABLE_RATE_LIMITING=true
# RATE_LIMIT_REDIS_URL=      # Optional - uses main Redis if not set